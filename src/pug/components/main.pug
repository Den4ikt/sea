mixin printOffer(items)
    for item in items
        .offer-cards.star
            img(src=item.img, alt=item.h3)
            h3.offer-card-header #{item.h3}
            p.offer-card-text #{item.p} 
            .offer-line
                strong.offer-card-price #{item.price} 
                a.offer-card-button(href=item.a) замовити
