mixin printcard(cards)
    for card in cards 
        - let star="clear"
        if (card.star)
            - star="star"
        .card(class=star) 
            img.card-image(src=card.img, alt=card.h3)
            h3.card-header #{card.h3}
            strong.card-price #{card.price}*
            p.card-text #{card.p}
